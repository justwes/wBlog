<!DOCTYPE html>
<html>
<head>
  <title>WBlog</title>
  <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin/application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="../index.html"><h1>wBlog<span>/Manager</span></h1></a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= params[:controller] == 'admin/posts' ? 'active' : '' %>"><%= link_to "Posts", admin_posts_path %></li>
        <li class="<%= params[:controller] == 'admin/categories' ? 'active' : '' %>"><%= link_to "Categories", admin_categories_path %></li>
        <li class="<%= params[:controller] == 'admin/users' ? 'active' : '' %>"><%= link_to "Users", admin_users_path %></li>
      </ul>
      <%= render 'partials/admin/search' %>
    </div><!--/.nav-collapse -->
  </div>


</nav>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-10">

        <div class="well">

          <% if flash[:notice] %>
            <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= yield %>

        </div>

      </div>
    </div>
  </div>
</section>

<footer>
  <p>
    Copyright &copy; 2015 | <a href="https://github.com/justwes/wBlog">wBlog</a> | <%= link_to "Frontend", root_path, target:'_blank'  %></p>
  </p>
</footer>
</body>
</html>
